import lejos.nxt.Motor;

public class Greifarm {
	private boolean greiftGerade;
	private int greifenRotation;
	
	public Greifarm() {
		greiftGerade = false;
	}
	public void close() {
		loslassen();
	}
	
	public void zugreifen() {
		if(!greiftGerade) {
			Motor.C.rotate(-100);
			greiftGerade = true;
		}
	}
	public void loslassen() {
		if(greiftGerade) {
			Motor.C.rotate(100);
			greiftGerade = false;
		}
	}
}
